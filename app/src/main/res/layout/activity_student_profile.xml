<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".StudentProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <TextView
                android:id="@+id/studentProfile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:text="Edit Profile"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="267dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_height="307dp"
                app:srcCompat="@drawable/studentProf" />

            <EditText
                android:id="@+id/st_edName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginEnd="54dp"
                android:background="@drawable/border"
                android:ems="10"
                android:drawableLeft="@drawable/ic_baseline_people_alt_24"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="Alex Mathew"
                android:layout_toRightOf="@+id/st_name"
                android:layout_below="@+id/studentProfile"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/st_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_marginTop="265dp"
                android:layout_below="@+id/studentProfile"
                android:layout_marginEnd="12dp"
                android:text="FULL NAME:" />

            <EditText
                android:id="@+id/st_edUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="52dp"
                android:background="@drawable/border"
                android:ems="10"
                android:drawableLeft="@drawable/ic_baseline_emoji_people_24"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:layout_toRightOf="@+id/st_username"
                android:layout_below="@+id/st_edName"
                android:minHeight="48dp"
                android:text="student"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                tools:ignore="DuplicateClickableBoundsCheck" />

            <TextView
                android:id="@+id/st_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_below="@+id/st_name"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="13dp"
                android:text="USERNAME:" />

            <EditText
                android:id="@+id/st_edPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="52dp"
                android:layout_toRightOf="@+id/st_name"
                android:layout_below="@+id/st_edUsername"
                android:background="@drawable/border"
                android:ems="10"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:text="abc"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/st_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_marginTop="52dp"
                android:layout_below="@+id/st_username"
                android:layout_marginEnd="13dp"
                android:text="PASSWORD:" />

            <EditText
                android:id="@+id/st_edLocality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="52dp"
                android:layout_toRightOf="@+id/st_name"
                android:layout_below="@id/st_edPassword"
                android:background="@drawable/border"
                android:ems="10"
                android:drawableLeft="@drawable/ic_baseline_my_location_24"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="Kochi"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/st_locality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_marginTop="48dp"
                android:layout_below="@+id/st_password"
                android:layout_marginEnd="22dp"
                android:text="LOCALITY:" />

            <EditText
                android:id="@+id/st_edAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="52dp"
                android:background="@drawable/border"
                android:ems="10"
                android:drawableLeft="@drawable/ic_baseline_cake_24"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:minHeight="48dp"
                android:layout_toRightOf="@+id/st_name"
                android:layout_below="@id/st_edLocality"
                android:text="21"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/st_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="59dp"
                android:layout_below="@+id/st_locality"
                android:text="AGE:" />

            <EditText
                android:id="@+id/st_edEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/border"
                android:ems="10"
                android:drawableLeft="@drawable/ic_baseline_book_24"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:layout_toRightOf="@+id/st_name"
                android:layout_below="@id/st_edAge"
                android:text="B.C.A."
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/st_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/st_age"
                android:text="EDUCATION:" />

            <Button
                android:id="@+id/st_saveBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="61dp"
                android:layout_marginBottom="100dp"
                android:backgroundTint="@color/gray"
                android:text="Save"
                android:layout_below="@+id/st_education"
                android:textColor="@color/gold" />

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>