<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".CompanyProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/storeOwnerProfile"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Edit Profile"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/gray"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="340dp"
                android:layout_height="260dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/companyprof" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/so_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="COMPANY:" />

                <EditText
                    android:id="@+id/ed_soName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="27dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:text="Confirm Name"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/so_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="USERNAME:" />

                <EditText
                    android:id="@+id/ed_soUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="27dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:text="Confirm Email ID"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/so_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="9dp"
                    android:layout_gravity="center_vertical"
                    android:text="PASSWORD:" />

                <EditText
                    android:id="@+id/ed_soPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="27dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text="Confirm Password"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/so_locality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="21dp"
                    android:layout_gravity="center_vertical"
                    android:text="LOCALITY:" />

                <EditText
                    android:id="@+id/ed_soLocality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="27dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:text="Confirm Location"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray" />
            </LinearLayout>

            <Button
                android:id="@+id/so_saveBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="55dp"
                android:backgroundTint="@color/gray"
                android:text="Save"
                android:layout_gravity="center"
                android:textColor="@color/gold" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>