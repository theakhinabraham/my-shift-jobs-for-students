<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="-251dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="151dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="My Shift"
                android:textColor="@color/gray"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="413dp"
                android:layout_height="327dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/work" />

            <EditText
                android:id="@+id/emailReg"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_baseline_mail_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <EditText
                android:id="@+id/passwordReg"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="56dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/loginText"
                android:layout_width="350dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="171dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="174dp"
                android:text="LOGIN AS:" />

            <Button
                android:id="@+id/loginStudentBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="135dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="136dp"
                android:backgroundTint="@color/gray"
                android:text="Student"
                android:textColor="@color/gold" />

            <Button
                android:id="@+id/loginCompanyBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="135dp"
                android:layout_marginEnd="136dp"
                android:text="Company"
                android:textColor="@color/gold" />

            <TextView
                android:id="@+id/loginText2"
                android:layout_width="350dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="90dp"
                android:text="Don't have an account? Register now:" />

            <Button
                android:id="@+id/registerReg"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="135dp"
                android:layout_marginEnd="136dp"                android:layout_marginTop="15dp"
                android:layout_marginBottom="71dp"
                android:backgroundTint="@color/gold"
                android:text="Register"
                android:textColor="@color/gray" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>